{
  "name": "flashy-boot-app",
  "version": "1.0.0",
  "description": "RFID boot gate app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux dir"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.flashy.boot",
    "productName": "FlashyBoot",
    "linux": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ]
    },
    "files": [
      "**/*"
    ],
    "asar": false
  }
}
